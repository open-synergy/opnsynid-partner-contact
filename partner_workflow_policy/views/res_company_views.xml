<openerp>
<data>

<record id="res_company_res_partner_workflow_policy_view_form" model="ir.ui.view">
    <field name="name">res.company.res.partner.workflow.policy.form</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//notebook" position="inside">
                <page name="workflow_policy_res_partner" string="Workflow Policy Partner">
                    <group name="grp_workflow_res_partner" colspan="4" col="2">
                        <field name="res_partner_confirm_grp_ids" widget="many2many_tags"/>
                        <field name="res_partner_valid_grp_ids" widget="many2many_tags"/>
                        <field name="res_partner_restart_grp_ids" widget="many2many_tags"/>
                        <!--  customer and supplier -->
                        <field name="res_partner_mark_customer_grp_ids" widget="many2many_tags"/>
                        <field name="res_partner_unmark_customer_grp_ids" widget="many2many_tags"/>
                        <field name="res_partner_mark_supplier_grp_ids" widget="many2many_tags"/>
                        <field name="res_partner_unmark_supplier_grp_ids" widget="many2many_tags"/>
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>

</data>
</openerp>
