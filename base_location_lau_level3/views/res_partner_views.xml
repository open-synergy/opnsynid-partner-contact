<openerp>
<data>

<record model="ir.ui.view" id="res_partner_form_view">
    <field name="name">Partner form with LAU</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base_location_lau_partner_view.res_partner_form_view"/>
    <field name="priority" eval="7"/>
    <field name="arch" type="xml">
        <xpath expr="//sheet/group//field[@name='lau2_id']" position="after">
            <field name="lau3_id" />
        </xpath>
        <xpath expr="//field[@name='child_ids']/form//field[@name='lau2_id']/.." position="after">
            <field name="lau3_id"/>
        </xpath>
    </field>
</record>

<record model="ir.ui.view" id="res_partner_search_view">
    <field name="name">Partner search with LAU</field>
    <field name="model">res.partner</field>
    <field name="priority" eval="7"/>
    <field name="inherit_id" ref="base_location_lau_partner_view.res_partner_search_view"/>
    <field name="arch" type="xml">
        <field name="lau2_id" position="after">
            <field name="lau3_id"/>
        </field>
        <filter string="LAU L2" position="after">
            <filter string="LAU L3"
                    domain="[]"
                    context="{'group_by': 'lau3_id'}"/>
        </filter>
    </field>
</record>

</data>
</openerp>
