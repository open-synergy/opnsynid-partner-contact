<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="res_partner_view_form" model="ir.ui.view">
            <field name="name">Partner Risk Limit Policy</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="partner_financial_risk.res_partner_view_risk" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='credit_limit']" position="after">
                    <field name="risk_single_sale_order_limit"
                        attrs="{'readonly':[('risk_allow_edit','=',False)]}"
                        />
                </xpath>
            </field>
        </record>
   
    </data>
</openerp>
