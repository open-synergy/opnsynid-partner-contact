<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<record id="partner_risk_adjustment_view_form" model="ir.ui.view">
    <field name="name">Partner Risk Adjustment</field>
    <field name="model">partner.risk_adjustment</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" states="draft"/>
                <button name="action_done" string="Approve" type="object" class="oe_highlight" states="confirm"/>
                <button name="action_cancel" string="Cancel" type="object" states="draft,confirm"/>
                <button name="action_reset" string="Reset to Draft" type="object" states="cancel"/>
                <field name="state" widget="statusbar"/>
            </header>
            <sheet>
                <label for="name"/>
                <h1>
                    <field name="name"/>
                </h1>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="partner_id"/>
                        <field name="create_uid" readonly="1"/>
                        <field name="create_date" readonly="1"/>
                    </group>
                    <group name="group_1_2" colspan="1" col="2">
                        <field name="risk_invoice_draft"/>
                        <field name="risk_invoice_open"/>
                        <field name="risk_invoice_unpaid"/>
                        <field name="risk_account_amount"/>
                    </group>
                </group>
                <notebook>
                    <page name="page_reason" string="Reason">
                        <field name="reason" colspan="4"/>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>

<record id="partner_risk_adjustment_view_tree" model="ir.ui.view">
    <field name="name">Partner Risk Adjustment</field>
    <field name="model">partner.risk_adjustment</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name" />
            <field name="create_uid"/>
            <field name="create_date"/>
            <field name="partner_id"/>
            <field name="risk_invoice_draft"/>
            <field name="risk_invoice_open"/>
            <field name="risk_invoice_unpaid"/>
            <field name="risk_account_amount"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="partner_risk_adjustment_action" model="ir.actions.act_window">
    <field name="name">Partner Risk Adjustment</field>
    <field name="res_model">partner.risk_adjustment</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem 
    id="partner_risk_adjustment_menu"
    name="Partner Risk Adjustment"
    parent="base.menu_sales"
    action="partner_risk_adjustment_action"
    sequence="100"/>
</data>
</openerp>
